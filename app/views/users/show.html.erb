<div class='container mb-4'>
  <% if @user.profile.attached? %>
    <%= image_tag @user.profile , class:'profile'%>
  <% end %>
  <div>
    <div class='view'>
      <div>
        <ul class='list1'>
          <li><b>FirstName:</b></li><hr>
          <li><b>LastName:</b></li><hr>
          <li><b>Email Address:</b></li><hr>
          <li><b>Country:</b></li><hr>
          <li><b>City:</b></li><hr>
          <li><b>Phone Number:</b></li><hr>
          <li><%= link_to('edit Account', edit_user_registration_path(:id => params[:id]), class:'btn btn-edit2')%></li>  
        </ul>
      </div>
      <div>
        <ul class='list2'>
          <li><%= @user.first_name %></li><hr>
          <li><%= @user.last_name %></li><hr>
          <li><%= @user.email %></li><hr>
          <li><%= @user.country %></li><hr>
          <li><%= @user.city %></li><hr>
          <li><%= @user.phone_number %></li><hr>
        <ul>
        <%= signed_in_helper %>
      </div>
    </div>
  </div>
</div>
