<div class='row'>
  <div>
    <%= render 'shared/sidebar'%>
  </div>
  <div class='dash'>
    <table id="search-category" class="table table-striped table-hover">
      <thead class='table-head'>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Title</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |cat|%>
          <tr>
            <th scope="row"><%= cat.id %></th>
            <td><%= cat.name %></td>
            <td><%= link_to 'edit', edit_category_path(cat)%> <%= link_to 'delete', category_path(cat), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }%></td>
          </tr>
        <% end %>
      </tbody> 
    </table>
    <%= link_to 'Add Categpries',new_category_path, class:'btn btn-pro' %>
  </div> 
</div>
