<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingCart</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class='bg-light'>
    <nav class="navbar fixed-top ">
      <div class="container-fluid contain">
        <div>
          <%= image_tag('log1.png',class:'logo1')%><%= image_tag('log2.png',class:'logo2')%>
        </div>
        <div>
        <% if user_signed_in? %>
          <div>
            <div>
              <%= link_to 'log out', destroy_user_session_path,data: { turbo_method: :delete}  %>
              <%= link_to 'my profile', user_path(current_user),class: 'link-in' %>
            </div>
          </div>   
        <% else %>
          <%= link_to 'Register', new_user_registration_path %>
          <%= link_to 'Sign in', new_user_session_path,class: 'link-in' %>
        <% end %>  
        </div> 
      </div>
    </nav> 
    <p class="notice bg-light"><%= notice %></p>
    <p class="alert bg-light"><%= alert %></p>
    <%= yield %>
  </body>
</html>